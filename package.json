  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.8.9",
    "rollup": "^4.1.5",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
